@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles{
    <link rel="stylesheet" href="~/css/login.css" />

}

<div id="login">

    
    <div class="loginsection">
        <form method="post" class="loginform shadow">

            <div id="formlabel" class="title jumbotron jumbotron-fluid">
                <h5 class="formheader">LOG IN</h5>
            </div>
            <div class="forminputs col-md-12">
                <div class="form-group">
                    <label asp-for="UserName" class="col-form-label col-md-2"></label>
                    <div class="col-md-12">
                        <input type="text" asp-for="UserName" placeholder="username" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-form-label col-md-2"></label>
                    <div class="col-md-12">
                        <input type="password" asp-for="Password" placeholder="password" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="btt col-md-12">
                <button type="submit" class="btn btn-primary btn-md">Log in</button>
            </div>
        </form>
    </div>

</div>