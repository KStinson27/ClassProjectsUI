@*Bill Split*@
<div id="splitModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bill Split Calculator</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class=" ">
                    <form method="post" asp-page-handler="split" id="split" class="calcForm">
                        <div class="col-sm-12">
                            <div class="col-sm-12">
                                <label for="GroupBillTotal" class="control-label col-sm-4">Bill Total</label>
                                <input type="text" asp-for="GroupBillTotal" class="form-control" />
                            </div>
                            <div class="col-sm-12">
                                <label for="Contributors" class="control-label col-sm-4"># of Contributors</label>
                                <input type="text" asp-for="Contributors" class="form-control" />
                                <small id="" class="form-text text-muted">
                                    How many people are you splitting with?
                                </small>
                            </div>

                        </div>
                        <div class="col-md-12">

                            <button type="submit" id="submit" value="Submit" class="btn btn-primary btn-block" data-toggle="modal">Calculate</button>
                        </div>
                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


@*{
    <form method="get"?>
        <label class="control-label col-sm-3">Calculators</label>
        <div class="col-sm-8">
            <select asp-for="Selection" asp-items="Model.Calculators">
                <option value=""> Select a Calculator</option>
            </select>
        </div>

        <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" value="Submit" class="btn btn-primary" asp-page-handler="RequestInfo">Submit</button>
        </div>
    </form>

        }
    @{

        switch (Model.Selection)
        {
            case 1:
                do
                {
        <form method="post">
            <div id="DegreeCalc" runat="server" visibility="<%# IsDegreeCalcVisible %>">

                <label for="DegreeCalc" class="control-label col-sm-3">Degree Conversion</label>

                <label for="Fahrenheit" class="control-label col-sm-3">Enter a temperature(Farenheit)</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="Fahrenheit" class="form-control" />
                </div>

            </div>
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
            </div>
            <div> @Model.Fahrenheit degrees Fahrenheit is @Model.celsius in Celsuis.</div>
        </form>
        } while (Model.IsDegreeCalcVisible == true);


        break;

    case 2:

    <div id="TaxCalc" runat="server" visibility="<%# IsTaxCalcVisible %>"/>
        <form method="post"> Tax Calculator</form>

        <div class="col-sm-8">
            <select name="FormSelection" class="form-control">
                <option value="">Select Calculator</option>
                <option value="Degrees">Temperature Conversion</option>
                <option value="Tax">Sales Tax</option>
                <option value="Tip">Tip</option>
                <option value="BillSplit">Group Bill Split</option>
            </select>
        </div>
        break;

        case 3:
        <div id="TipCalc" runat="server" visibility="<%# IsTipCalcVisible %>">
            <form method="post"> Tip Calculator</form>
        </div>

        break;

        case 4:
        <div id="SplitCalc" runat="server" visibility="<%# IsSplitCalcVisible %>">
            <form method="post"> Group Bill Split Calculator</form>
        </div>

        break;
        default:

        break

        }


        }*@
